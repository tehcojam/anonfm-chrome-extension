{
	"manifest_version": 2,
	"name": "Asian Wave",
	"description": "__MSG_description__",
	"homepage_url": "https://asianwave.ru",
	"default_locale": "ru",
	"offline_enabled": false,
	"version": "0.5.7",
	"icons": {
		"32": "img/icons/logo-32.png",
		"64": "img/icons/logo-64.png",
		"128": "img/icons/logo-128.png"
	},
	"browser_action": {
		"default_title": "Asian Wave",
		"default_popup": "popup.html",
		"default_icon": "img/icons/logo-64.png"
	},
	"permissions": [
		"https://*.asianwave.ru/*",
		"https://*.blyat.science/*",
		"notifications",
		"alarms"
	],
	"background": {
		"persistent": false,
		"scripts": [
			"code/js/kamina.min.js",
			"code/js/every.min.js",
			"code/js/main.min.js",
			"code/js/background.min.js"
		]
	},
	"content_security_policy": "default-src 'self'; connect-src 'self' https://*.asianwave.ru https://asianwave.ru https://*.blyat.science; media-src 'self' https://*.asianwave.ru; style-src 'self' https://asianwave.ru https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com",
	"options_ui": {
		"page": "options.html"
	}
}
